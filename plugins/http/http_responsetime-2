=head1 MAGIC MARKERS

 #%# family=manual

=cut

if [ "$1" = "config" ]; then
    echo 'graph_args --base 1000 -l 0'
    echo 'graph_title HTTP Response Times'
    echo 'graph_vlabel Times (seconds)'
    echo 'graph_category network'
    echo 'graph_info This graph shows HTTP response time statistics.'
    echo 'graph_printf %3.0lf'
     for site in $sites; do
     	siteid=`echo $site | sed 's/[^a-z]*//g'`
	echo "$siteid.label $site"
	echo "$siteid.info HTTP response time statistics for $site."
	echo "$siteid.min 0"
    done
    exit 0
fi

for site in $sites; do
    export siteid=`echo $site | sed 's/[^a-z]*//g'`
    seconds=$(curl --write-out %{time_total} --max-time "${max_time:-5}" --silent --output /dev/null --location ${site} | sed "s/^${max_time:-5}\.[0-9]\+/U/")
    echo -n "$siteid.value $seconds"
    echo
done
