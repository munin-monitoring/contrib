"
data_attrs[$key]="
    execute_count    DERIVE LINE 'execute count'
    user_calls       DERIVE LINE 'user calls'
    recursive_calls  DERIVE LINE 'recursive calls'
"
getvalue_func[$key]=getvalue_sysstat

